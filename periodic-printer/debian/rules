#!/usr/bin/make -f

ifndef PERIODIC_PRINTER
$(error PERIODIC_PRINTER not defined)
endif

# use dh-systemd for creating a systemd service and dh-sysuser for creating a user (when package is installed)
%:
	dh $@ --with systemd,sysuser

# use a different name from the package itself
override_dh_systemd_enable:
	dh_systemd_enable --name=${PERIODIC_PRINTER}

# save the debian in `dist` directory instead of `..`
override_dh_builddeb:
	dh_builddeb --destdir=dist/
